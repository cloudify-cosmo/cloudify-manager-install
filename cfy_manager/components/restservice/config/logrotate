/var/log/cloudify/rest/*.log {
        hourly
        missingok
        rotate {{ restservice.log.files_backup_count }}
        size {{ restservice.log.file_size}}M
        compress
        dateext dateformat -%Y%m%d-%s
        delaycompress
        notifempty
        sharedscripts
        postrotate
                [ -f /run/restservice.pid ] && kill -USR1 $(cat /run/restservice.pid)
        endscript
}
