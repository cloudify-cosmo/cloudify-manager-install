/var/log/cloudify/rest/*.log {
        hourly
        missingok
        rotate {{ restservice.log.files_backup_count }}
        size {{ restservice.log.file_size}}M
        compress
        nodateext
        delaycompress
        notifempty
        sharedscripts
        postrotate
                [ -f /run/cloudify-restservice/pid ] && kill -USR1 $(cat /run/cloudify-restservice/pid)
        endscript
}
